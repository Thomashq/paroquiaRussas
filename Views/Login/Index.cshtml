@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model Person

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paróquia Russas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/paroquiaRussas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <section class="h-100 gradient-form">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-dark">
                        <div class="row g-0">
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">Bem-vindo, Administrador.</h4>
                                    <p class="small mb-0 fs-6">
                                        Este é o portal exclusivo para os dedicados administradores da Paróquia de Russas. Vocês desempenham um papel vital em nossa comunidade, guiando-nos com sabedoria e amor.
                                        <br><br>
                                        Agradecemos profundamente pelo seu compromisso e serviço. Por favor, faça o login para continuar a sua missão de liderança na Paróquia de Russas.
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">ParoquiaRussas</a>
                                    </div>

                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger text-start" role="alert">
                                            @TempData["ErrorMessage"]
                                            <button type="button" class="btn btn-danger btn-sm close-alert position-absolute" style="right: 20px" aria-label="Close">X</button>
                                        </div>
                                    }

                                    <form asp-controller="Login" asp-action="Login" method="post">
                                        <div class="form-floating col-lg-12 my-4">
                                            <input type="text" class="form-control text-dark" id="nameInput" placeholder="Paulo Guilherme" required asp-for="Username">
                                            <label for="nameInput" class="text-dark">Digite seu nome</label>
                                        </div>

                                        <div class="form-floating col-lg-12 my-4">
                                            <input type="password" class="form-control text-dark" id="pwdInput" placeholder="Paulo Guilherme" required asp-for="Pwd">
                                            <label for="pwdInput" class="text-dark">Digite sua senha</label>
                                        </div>

                                        <button type="submit" class="col-4 btn-style" style="border-radius: 5px; border: none; height: 40px;" asp-controller="Login" asp-action="Login">Login</button>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/js/utility.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>